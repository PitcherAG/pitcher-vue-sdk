{
  "name": "@pitcher/vue-sdk",
  "version": "1.0.4",
  "description": "VueJS Development Tools for the use in Pitcher Impact",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PitcherAG/pitcher-vue-sdk.git"
  },
  "main": "src",
  "scripts": {
    "yarn link": "yarn link",
    "npm link": "npm link",
    "npm publish": "npm publish",
    "build": "rimraf ./dist && babel src -d dist",
    "lint": "eslint ./src --fix"
  },
  "author": "Pitcher AG",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PitcherAG/pitcher-vue-sdk/issues"
  },
  "homepage": "https://github.com/PitcherAG/pitcher-vue-sdk#readme",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.5",
    "@vue/composition-api": "^0.3.4",
    "handlebars": "^4.6.0",
    "pinia": "0.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint",
      "git add"
    ]
  }
}